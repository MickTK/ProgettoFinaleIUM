<?xml version="1.0" encoding="utf-8"?>

<!-- Anteprima annuncio (mostrato nella lista degli annunci) -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Da cambiare in relazione alla pagina di inserimento dei dati dell'annuncio-->
    <TextView android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CittÃ :"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:textSize="25dp" />

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="right"
     android:orientation="horizontal" >

    <Button android:id="@+id/favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
 </LinearLayout>

    <TextView android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indirizzo:"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:textSize="25dp" />

    <TextView android:id="@+id/descriptiom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrizione:"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:textSize="25dp" />

    <!-- Immagine annuncio -->

    <LinearLayout android:id="@+id/pictures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proprietario: "
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:textSize="25dp" />

    <TextView android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefono: "
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:textSize="25dp" />

    <TextView android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:textSize="25dp" />
    <!-- Nome e cognome locatore, numero e email-->




</LinearLayout>